<Window x:Class="ParameterViews.Dialogs.EditParametersDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParameterViews.Dialogs"
        xmlns:paramCtrls="clr-namespace:ParameterViews.UserControls"
        xmlns:convs="clr-namespace:ParameterViews.Converters"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="250" Width="400"
        SizeToContent="WidthAndHeight"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <convs:NullToVisibilityConverter
            x:Key="nullVisibilityConverter"
            True="Collapsed" 
            False="Visible"/>
    </Window.Resources>
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="{Binding Caption}" 
                Visibility="{Binding Caption, Converter={StaticResource nullVisibilityConverter}}"                       
                MaxWidth="200" FontWeight="Bold"
                Margin="5,0,0,10" HorizontalAlignment="Left"/>
            <paramCtrls:ParamCollectionCtrl DataContext="{Binding}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <Button Content="OK" Command="{Binding OkCommand}" Margin="5" Width="80" Height="30"  HorizontalAlignment="Left"/>
                <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="5" Width="80" Height="30" HorizontalAlignment="Right"/>
            </StackPanel>
            <!--  Just testing  paramCtrls:ParamGridViewCtrl 
                DataContext="{Binding}"/ -->
        </StackPanel>
    </Grid>
</Window>
