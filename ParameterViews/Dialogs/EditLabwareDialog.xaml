<Window x:Class="ParameterViews.Dialogs.EditLabwareDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParameterViews.Dialogs"
        xmlns:paramCtrls="clr-namespace:ParameterViews.UserControls"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="250" Width="300"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <paramCtrls:ParamCollectionCtrl DataContext="{Binding}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="5" Width="80" Height="30" HorizontalAlignment="Left"/>
                <Button Content="OK" Command="{Binding OkCommand}" Margin="5" Width="80" Height="30"  HorizontalAlignment="Right"/>
            </StackPanel>
            <!--  Just testing  paramCtrls:ParamGridViewCtrl 
                DataContext="{Binding}"/ -->
        </StackPanel>
    </Grid>
</Window>
