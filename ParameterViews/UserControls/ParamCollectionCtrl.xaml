<UserControl x:Class="ParameterViews.UserControls.ParamCollectionCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ParameterViews.UserControls"
             xmlns:vms="clr-namespace:ParameterViews.ViewModels.Prompts"
             xmlns:promptCtrls="clr-namespace:ParameterViews.UserControls.Prompts"
             xmlns:convs="clr-namespace:ParameterViews.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <UserControl.Resources>
        <convs:ClampHeightConverter x:Key="clampHeight" MaxHeight="550"/>
    </UserControl.Resources>
        <Grid>
            <Border Name="controlBorder" BorderBrush="Transparent" BorderThickness="1"
                HorizontalAlignment="Center" VerticalAlignment="Stretch"
                    Height="{Binding ActualHeight, ElementName=items, Converter={StaticResource clampHeight}}">
            <ScrollViewer 
                Height="{Binding ElementName=controlBorder, Path=ActualHeight}"
                VerticalScrollBarVisibility="Auto">
                <!-- Can this be repackaged as a style? -->
                <ItemsControl x:Name="items" ItemsSource="{Binding Parameters}">
                    <ItemsControl.Resources>
                        <DataTemplate DataType="{x:Type vms:BoolParamViewModel}">
                            <promptCtrls:BoolParamPromptCtrl/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vms:FloatParamViewModel}">
                            <promptCtrls:EnumParamPromptCtrl/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vms:IntParamViewModel}">
                            <promptCtrls:EnumParamPromptCtrl/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vms:StringParamViewModel}">
                            <promptCtrls:EnumParamPromptCtrl/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vms:StrArrayParamViewModel}">
                            <promptCtrls:EnumParamPromptCtrl/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vms:EnumParamViewModel}">
                            <promptCtrls:EnumParamPromptCtrl/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vms:VariableParamViewModel}">
                            <promptCtrls:EnumParamPromptCtrl/>
                        </DataTemplate>
                    </ItemsControl.Resources>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
